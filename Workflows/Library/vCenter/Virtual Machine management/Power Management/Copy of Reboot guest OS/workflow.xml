        <display-name>Reboot</display-name>
        <script encoded="false">vm.rebootGuest();</script>
        <in-binding>
            <bind name="vm" type="VC:VirtualMachine" export-name="vm"/>
        </in-binding>
        <out-binding/>
        <position y="130.0" x="140.0"/>
    </workflow-item>
    <workflow-item name="item1" type="end" end-mode="0" comparator="0">
        <in-binding/>
        <out-binding/>
        <position y="160.0" x="180.0"/>
    </workflow-item>
    <workflow-item name="item2" out-name="item0" type="task" prototype-id="wait-until-date" content-mode="x" comparator="0">
        <display-name>Wait until date</display-name>
        <script encoded="false">//Auto-generated script 
if (waitDate !== null) { 
	System.waitUntil(waitDate,1000);
}
else  { 
	throw "'waitDate' is NULL"; 
}
</script>
        <in-binding>
            <bind name="waitDate" type="Date" export-name="waitDate">
                <description>Wait date</description>
            </bind>
        </in-binding>
        <out-binding/>
        <description>Wait until date.</description>
        <position y="75.0" x="140.0"/>
    </workflow-item>
</ns2:workflow>
